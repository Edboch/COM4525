- if current_user.manager?
  %h1 Manage Your Team
  =link_to 'Create a new team', create_team_path
  - for team in @teams
    %h2= "Team name: #{team.name}"
    =link_to 'View team', team_path(team)

- if current_user.player?
  %h1 Player
  = link_to 'View invites', player_invites_path
  %h1 Upcoming Fixtures
  = link_to 'View your next matches', player_upcoming_matches_path 

.container 
  .row
    .col-sm-4.my-3
      .container
        .row.my-2
          .card
            %table.table
              %thead 
                %tr 
                  %th{ scope: 'col' } Opposition
                  %th{ scope: 'col' } Location 
                  %th{ scope: 'col' } Kick Off 

              %tbody 
                - @matches.first(5).each do | match |
                  %tr 
                    %td= match.opposition 
                    %td= match.location 
                    %td= match.start_time 
            .card-body 
              .card-text 
                All Upcoming Fixtures
                = link_to 'Fixtures', player_upcoming_matches_path, class: 'btn db-side-btn'
        .row.my-2
          = link_to 'Team Invites', player_invites_path, class: 'btn db-side-btn'
        .row.my-2 
          = link_to 'Create Team', create_team_path, class: 'btn db-side-btn'
    .col-sm-8.my-3
      .row 
        - @teams.each_slice(2) do | team_pair |
          - team_pair.each do | team |
            .col-md-4 
              .card.text-center
                %h2= team.name
                .card-body 
                  .container 
                    .row
                      - if team.owner_id == current_user.id  
                        %h4 Manager
                      - else  
                        %h4 Player 
                    .row  
                      %p= team.decorate.days_until_next_match.to_s
                    .row  
                      = link_to 'View Team', team_path(team), class: 'btn btn-rounded'
        
          
      



