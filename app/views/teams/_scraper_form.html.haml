= form_with(model: @team, local: true) do |form|
  .field.d-flex.align-items-center.my-3
    .mx-4
      = form.label :url, 'League URL (where you can see your league table)'
    = form.text_field :url

  .field.d-flex.align-items-center.my-3
    .mx-4
      = form.label :team_name, 'Team Name (exactly as on the website)'
    = form.text_field :team_name

  .actions.text-end.m-3
    = form.submit 'Update', class: 'btn db-side-btn'
