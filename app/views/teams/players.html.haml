.container.text-center
  .row.m-3
    %h3= "Players for #{@team.name}"
  .row 
    .col
      %table.table
        %thead 
          %tr 
            %th{ scope: 'col' } #
            %th{ scope: 'col' } Name
            %th{ scope: 'col' } Joined
            - if current_user.staff_of_team?(@team, current_user) # include remove player column
              %th{ scope: 'col' }
        %tbody 
          - @players.each_with_index do | player, index |
            %tr 
              %th{ scope: 'row' }= index + 1
              %td= link_to player.name, player_stats_team_path(@team, player), class: 'btn btn-link'
              - if current_user.staff_of_team?(@team, current_user) # include remove player button
                %td
                  = link_to 'Remove', remove_team_player_path(team_id: @team.id, user_id: player.id), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to remove this player from your team?' }

