.row.justify-content-center
  .col-sm-8.col-lg-6
    .card
      .card-header
        Team details
      .card-body
        .row.mb-0
          %h3= "Team name: #{@team.name}"
          %h3= "Team location: #{@team.location_name}"
      .card-footer.d-flex
        - if current_user.manager?
          = link_to 'Edit', edit_team_path(@team), class: 'btn btn-link'
          = link_to 'Delete', team_path(@team), method: :delete, data: { confirm: 'Are you sure you want to delete the team?' }, class: 'btn btn-link'
        = link_to 'Back', dashboard_path, class: 'btn btn-link ms-auto'
    = link_to 'Show all Players', team_players_path(@team), class: 'btn btn-primary'
    = link_to 'Invite a Player', new_team_user_team_path(@team), class: 'btn btn-primary'
    = link_to 'View Fixtures', team_fixtures_path(team_id: @team.id), class: 'btn btn-primary'
    = link_to 'Add a Match', new_team_match_path(@team), class: 'btn btn-primary'
    = link_to 'Create a match invite', new_team_invite_path(@team), class: 'btn btn-primary'
    = link_to 'View all invites published by my team', team_published_invites_path(@team), class: 'btn btn-primary'