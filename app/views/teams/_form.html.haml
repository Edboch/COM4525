= form_with(model: @team, local: true) do |form|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(team.errors.count, 'error')} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |message|
          %li= message

  .field 
    =form.hidden_field :owner_id, value: current_user.id

  .field.d-flex.align-items-center.my-3
    .mx-4
      = form.label :name
    = form.text_field :name, id: :team_name

  .field.d-flex.align-items-center.my-3
    .mx-4
      = form.label :location_name
    = form.text_field :location_name, id: :team_location

  .actions.text-end.m-3
    = form.submit 'Submit', class: 'btn db-side-btn'