= form_with(model: [@team, @invite], local: true) do |form|

  .field 
    = form.hidden_field :team_id, value: @team.id

  .form-group.mb-4
    = form.label :time
    = form.datetime_select :time, id: :time, class: 'max-width-100'

  .form-group.mb-4
    = form.label :location
    = form.text_field :location, id: :location, class: 'max-width-100'

  .form-group.mb-4
    = form.label :description
    = form.text_field :description, id: :description, class: 'max-width-100'

  .actions
    = form.submit 'Create Invite', class: 'btn db-side-btn'
