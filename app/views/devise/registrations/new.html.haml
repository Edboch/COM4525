.container.m-4
  .row.text-center 
    %h2 Sign Up

  .row
    .col-sm-2 
    .col-sm-8
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = f.error_notification

        .form-inputs
          .field
            .mt-2
              = f.input :email, required: true, autofocus: true, input_html: { autocomplete: 'email' }
            .mt-2
              = f.input :name, required: true, autofocus: true, input_html: { autocomplete: 'name' }
            .mt-2
              = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: 'new-password' }
            .mt-2
              = f.input :password_confirmation, required: true, input_html: { autocomplete: 'new-password' }
        .form-actions.text-end.my-2
          = f.button :submit, 'Sign up', class: 'btn db-side-btn'
          .mt-4
            Already signed up?
            = link_to 'Log in', root_path
    .col-sm-2
    
  


