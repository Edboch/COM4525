.container
  - if @user_team.errors.any?
    #error_explanation
      %ul.list-unstyled
        - @user_team.errors.full_messages.each do |message|
          %li.text-danger= message

= form_with(model: [@team, @user_team], local: true) do |form|
  .field.d-flex.align-items-center.my-3
    .mx-4
      = form.label :email, "Player's Email"
    = form.email_field :email, id: :email

  .actions.actions.text-end.m-3
    = form.submit 'Invite', class: 'btn db-side-btn'
